<%= form_for ([@user, @restaurant])do |f| %>

	<%= f.hidden_field(:user_id, session[:user_id]) %>

	<%= f.label :name %>
	<%= f.text_field :name %><br>

	<%= f.label :capacity %> 
	<%= f.number_field :capacity %><br>

	<%= f.label :opens_at %> 
	<%= f.select(:opens_at, restaurant_time_options) %>	<br>

	<%= f.label :closes_at %> 
	<%= f.select(:closes_at, restaurant_time_options) %><br>	

	<%= f.label :description %> 
	<%= f.text_field :description %><br>	

	<%= f.label :address %> 
	<%= f.text_field :address %><br>	

	<%= f.label :phone %> 
	<%= f.text_field :phone %>	<br>
	<br>
	<%= f.submit %>
<% end %>