<h1 style="text-decoration: underline">Restaurants</h1>
<h3><%= link_to "Add a New Restaurant", new_restaurant_path %></h3>
<br><br>
<% @restaurants.each do |restaurant| %>


	<h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
	<p><strong>Picture:</strong><%= restaurant.picture_url %></p>
	<p><strong>Capacity:</strong><%= restaurant.capacity %></p>
	<p><strong>Hours:</strong><%= pretty_time(restaurant.opens_at)%> - <%= pretty_time(restaurant.closes_at) %></p>
	
	<p><strong>Description: </strong><%= restaurant.description %></p>
	<p><strong>Address: </strong><%= restaurant.address %></p>
	<p><strong>Phone: </strong><%= restaurant.phone %></p>
	<br>
<% end %>